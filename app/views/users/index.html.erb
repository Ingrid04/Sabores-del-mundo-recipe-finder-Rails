<%= link_to "Back", root_path %>
<h1 align='center'>All Recipes</h1>
<div align='center'>
  <% @users.each do |user| %>
    <ul class='listing'>
       <div class='row'>
          <div class='well col-md-4 col-md-offset-4'>
             <li class='recipe-name'>
                <%= link_to user.username, user_path(user) %>
             </li>
             <li><small><%= pluralize(user.recipes.count, "recipe") if user.recipes %> </small>
             </li>
          </div>
       </div>
    </ul>
  <% end %> 
</div>
