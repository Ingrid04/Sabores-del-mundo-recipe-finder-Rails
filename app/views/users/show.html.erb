
<% if current_user %>
<h1 align="center">Welcome <%= @user.username %></h1>
<% end %>
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= gravatar_for @user, size: 100 %>
    </div>
</div>
<h2> <%= @user.username %>'s recipes</h2>
<% if current_user %>
<%= link_to 'Update your profile', edit_user_path %> |
<%= link_to 'Create a recipe', new_recipe_path %> |
<%= link_to 'Log Out', logout_path, method: :delete %> 
<% end %>
<br>
<br>
<%= render 'recipes/recipe', obj: @user.recipes %> 
   <br>
<%= link_to 'Back to all recipes', root_path %>
