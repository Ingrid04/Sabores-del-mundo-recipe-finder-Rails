
<%= form_for(@recipe) do |f| %>
<fieldset>
  <div class="field">
    <legend><%= f.label :name %></legend>
    <%= f.text_field :name %>
  </div>
  <br>
  <div class='field'>
  <legend><%= f.label :difficulty_level %> </legend>
  <%= f.text_field :difficulty_level %>
  </div>

</fieldset>
  <br>
  <fieldset>
        <legend>Ingredients</legend>
         <%= f.fields_for :recipe_ingredients do |ing| %>
          <div class="nested_fields">
            <div class="field">
              <h4>List of ingredients</h4>
              <%= ing.collection_select :ingredient_id, Ingredient.all, :id, :name %>          
                  <%= ing.text_field :quantity %>                        
            </div>
         </div>
         <% end %>
       </fieldset>
  <fieldset>
    <div class="field">
        <legend> <%= f.label :instructions %> </legend>
    <%= f.text_area :instructions %> 
  </div>
</fieldset>
  <br>
  <%= f.submit %>
<% end %>