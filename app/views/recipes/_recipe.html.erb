<% obj.each do |recipe| %>
<div class='recipe-name'>
  <ul>
<li><%= link_to recipe.name, recipe_path(recipe) %> </li>
  </ul>
</div>
  <div class='recipe-meta-details'>
     <small>Created by: <%= recipe.user.username %>,
    <%= time_ago_in_words(recipe.created_at) %> ago, 
    last updated: <%= time_ago_in_words(recipe.updated_at) %> ago </small>
  </div>

<% if logged_in? && current_user == recipe.user %>
    <div class="recipe_actions">
        <%= link_to 'Edit this recipe', edit_recipe_path(recipe) %> |
        <%= link_to 'Delete this recipe', recipe_path(recipe), method: :delete,
        data: { confirm: 'Are you sure you want to delete this recipe?'},
        class: "btn btn-xs btn-danger" %>
<% end %>

    </div>

<%end%>
